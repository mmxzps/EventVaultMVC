@{
    ViewData["Title"] = "About us";
}

<div class="container py-2">
    <div class="position-relative p-0">
        <img src="~/event.jpeg" alt="Header" class="img-fluid w-100" style="height: 12rem; object-fit: cover;">
    </div>

    <div class="text-center mb-5 mt-3">
        <h1 class="display-4 fw-bold text-white">About – Happening</h1>
    </div>

    <div class="row justify-content-center text-light">
        <div class="col-lg-8">
            <p class="lead">
                <strong>Happening</strong> is your smart guide to events and experiences in your city.
                Our platform gathers and presents an independent, high-quality selection of the best events, concerts, festivals, and activities – all in one place.
                Whether you're looking for something to do this weekend or planning for future events, Happening is here to simplify your search.
            </p>
            <br />

            <div class="mb-4">
                <h5 class="text-white">Need help with the app?</h5>
                <p>
                    Our team is available daily via email and social media to answer all your questions.
                    Please note that we do not provide in-person support at this time.
                </p>
            </div>

            <div class="mb-4">
                <h5 class="text-white">Have questions or feedback?</h5>
                <p>
                    <strong>Email:</strong> <a href="mailto:support@happening.com" class="text-decoration-none" style="color:#CE9F9F">support@happening.com</a><br />
                    <strong>Phone:</strong> <span>08-808 28 808</span><br />
                </p>
                <ul class="list-unstyled">
                    <li><strong>Phone Hours:</strong></li>
                    <li>Monday–Friday: 09:00–18:00</li>
                    <li>Saturday–Sunday: 09:00–15:00</li>
                </ul>
            </div>

            <div class="mb-4">
                <h5 class="text-light">Follow Us on Social Media</h5>
                <p>
                    Stay updated with the latest events:<br />
                    <a href="#" class="text-decoration-none" style="color:#CE9F9F">Happening on Facebook</a><br />
                    <a href="#" class="text-decoration-none" style="color:#CE9F9F">Happening on Instagram</a>
                </p>
            </div>

            <p class="text-center text-light">
                Explore your city and discover new experiences with <strong>Happening</strong> – your personal event guide!
            </p>
        </div>
    </div>
</div>
